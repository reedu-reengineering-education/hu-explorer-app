generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Schule {
  id   String @id @default(uuid())
  name String
  // VersiegelungRecord  VersiegelungRecord[]
  // ArtenvielfaltRecord ArtenvielfaltRecord[]
}

model VersiegelungRecord {
  id        String   @id @default(uuid())
  value     Float
  group     String
  area      Float?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")
  // school    Schule   @relation(fields: [schuleId], references: [id])
  // schuleId  String
}

model ArtenvielfaltRecord {
  id        String   @id @default(uuid())
  art       String
  count     Int
  group     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")
  // school    Schule   @relation(fields: [schuleId], references: [id])
  // schuleId  String
}
